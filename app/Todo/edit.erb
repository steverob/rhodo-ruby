<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @todo.task %></h1>
    <a href="<%= url_for :action => :show, :id => @todo.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @todo.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @todo.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="todo[task]" class="fieldLabel">Task</label>
            <input type="text" id="todo[task]" name="todo[task]" value="<%= @todo.task %>" <%= placeholder( "Task" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="todo[completed]" class="fieldLabel">Completed</label>
            <input type="text" id="todo[completed]" name="todo[completed]" value="<%= @todo.completed %>" <%= placeholder( "Completed" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
