<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @todo.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @todo.object %>"/>
      <input type="hidden" name="todo[completed]" value="false"/>

      
          <div data-role="fieldcontain">
            <label for="todo[task]" class="fieldLabel">Task</label>
            <input type="text" id="todo[task]" name="todo[task]" <%= placeholder("Task") %> />
          </div>

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
